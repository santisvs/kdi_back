files:
  "/opt/elasticbeanstalk/tasks/taillogs.d/postgis.log":
    mode: "000644"
    owner: root
    group: root
    content: |
      /var/log/postgis-install.log

commands:
  01_install_postgis:
    command: |
      # Nota: PostGIS debe instalarse en RDS, no en la instancia EC2
      # Este script es solo para referencia
      echo "PostGIS debe estar instalado en la instancia RDS PostgreSQL"
      echo "Para instalar PostGIS en RDS, ejecuta: CREATE EXTENSION IF NOT EXISTS postgis;"
    ignoreErrors: true

